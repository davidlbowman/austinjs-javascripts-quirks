{
	"$schema": "https://biomejs.dev/schemas/1.8.1/schema.json",
	"javascript": {
		"formatter": {
			"enabled": true,
			"bracketSpacing": true,
			"semicolons": "asNeeded",
			"trailingCommas": "none"
		}
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"suspicious": {
				"noDoubleEquals": "off"
			},
			"correctness": {
				"noConstantCondition": "off",
				"noInnerDeclarations": "off"
			},
			"style": {
				"noVar": "off"
			}
		}
	},

	"organizeImports": {
		"enabled": true
	},
	"vcs": {
		"enabled": true,
		"clientKind": "git",
		"defaultBranch": "main",
		"useIgnoreFile": true
	}
}

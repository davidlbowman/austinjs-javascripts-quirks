{
	"$schema": "https://biomejs.dev/schemas/1.7.3/schema.json",
	"javascript": {
		"formatter": {
			"enabled": true,
			"bracketSpacing": true,
			"semicolons": "asNeeded"
		}
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"suspicious": {
				"noDoubleEquals": "off"
			}
		}
	},

	"organizeImports": {
		"enabled": true
	},
	"vcs": {
		"enabled": true,
		"clientKind": "git",
		"defaultBranch": "main",
		"useIgnoreFile": true
	}
}
